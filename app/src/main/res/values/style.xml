<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AlertDialogNight" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/black</item>
        <item name="android:color">@color/white</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="AlertDialogDay" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:color">@color/black</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <!-- setting button colour https://stackoverflow.com/questions/27965662/how-can-i-change-default-dialog-button-text-color-in-android-5 -->
    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/purple_500</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/purple_500</item>
    </style>
</resources>